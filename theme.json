{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 3,
  "settings": {
    "appearanceTools": true,
    "custom": {
      "container": {
        "maxWidth": "1200px",
        "paddingX": "1rem"
      }
    },
    "color": {
      "palette": [
        { "slug": "primary",   "name": "Primary",   "color": "#d1a63d" },
        { "slug": "secondary", "name": "Secondary", "color": "#485972" },
        { "slug": "tertiary",  "name": "Tertiary",  "color": "#d6d4ac" },
        { "slug": "success",   "name": "Success",   "color": "#198754" },
        { "slug": "info",      "name": "Info",      "color": "#0dcaf0" },
        { "slug": "warning",   "name": "Warning",   "color": "#ffc107" },
        { "slug": "danger",    "name": "Danger",    "color": "#dc3545" },
        { "slug": "light",     "name": "Light",     "color": "#f8faf5" },
        { "slug": "dark",      "name": "Dark",      "color": "#2e2e2e" }
      ],
      "defaultPalette": false,
      "link": true
    },
    "spacing": {
      "units": ["px","rem","%","vw"],
      "spacingSizes": [
        { "slug": "0", "name": "0", "size": "0" },
        { "slug": "1", "name": "1", "size": "0.25rem" },
        { "slug": "2", "name": "2", "size": "0.5rem" },
        { "slug": "3", "name": "3", "size": "1rem" },
        { "slug": "4", "name": "4", "size": "1.5rem" },
        { "slug": "5", "name": "5", "size": "3rem" }
      ],
      "blockGap": "1rem"
    },
    "typography": {
      "fluid": true,
      "fontFamilies": [
        {
          "slug": "system",
          "name": "System UI",
          "fontFamily": "-apple-system, system-ui, Segoe UI, Roboto, Helvetica, Arial, sans-serif"
        }
      ],
      "fontSizes": [
        { "slug": "sm",  "size": "0.875rem", "name": "Small" },
        { "slug": "base","size": "1rem",     "name": "Base" },
        { "slug": "lg",  "size": "1.25rem",  "name": "Large" },
        { "slug": "xl",  "size": "1.5rem",   "name": "XL" },
        { "slug": "xxl", "size": "2rem",     "name": "XXL" }
      ],
      "lineHeight": "1.3"
    },
    "layout": {
      "contentSize": "720px",
      "wideSize": "1140px"
    },
    "blocks": {
      "core/button": {
        "border": { "radius": "0.375rem" },
        "color": { "background": "var(--wp--preset--color--primary)" }
      },
      "core/paragraph": {
        "typography": { "fontSize": "var(--wp--preset--font-size--base)" }
      },
      "core/heading": {
        "typography": { "fontFamily": "var(--wp--preset--font-family--system)", "fontWeight": "700" }
      },
      "core/columns": {
        "spacing": { "blockGap": "1.5rem" }
      }
    },
    "useRootPaddingAwareAlignments": true,
    "shadow": { "defaultPresets": false }
  },
  "styles": {
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--system)",
      "lineHeight": "1.6"
    },
    "elements": {
      "link": { "color": { "text": "var(--wp--preset--color--primary)" } }
    }
  }
}